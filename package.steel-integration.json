{
  "name": "spur-steel-integration",
  "version": "1.0.0",
  "description": "Spur Browser integration with Steel Browser - Phase 2 Implementation",
  "repository": {
    "type": "git",
    "url": "https://github.com/spur/spur-steel-integration"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "setup": "./setup-steel-integration.sh",
    "install:all": "npm install && cd steel-browser && npm install",
    "build": "npm run build:steel && npm run build:spur && npm run build:integration",
    "build:steel": "cd steel-browser && npm run build",
    "build:spur": "npm run build",
    "build:integration": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev:steel": "cd steel-browser && npm run dev",
    "dev:spur": "npm run dev",
    "dev:integration": "concurrently \"npm run dev:steel\" \"npm run dev:spur\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "npm run build:integration && jest integration-tests/",
    "lint": "eslint src integration-tests --ext .ts,.js",
    "lint:fix": "eslint src integration-tests --ext .ts,.js --fix",
    "format": "prettier --write src integration-tests",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "docker:build": "docker-compose -f docker-compose.dev.yml build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.dev.yml run test-runner"
  },
  "dependencies": {
    "@steel-browser/api": "^0.2.4",
    "puppeteer-core": "^23.6.0",
    "jsdom": "^24.1.3",
    "fastify": "^5.2.1",
    "level": "^9.0.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.2",
    "winston": "^3.11.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/jest": "^29.5.8",
    "@types/uuid": "^9.0.7",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "browser",
    "steel-browser",
    "spur",
    "ai",
    "automation",
    "integration",
    "chromium",
    "puppeteer",
    "voice",
    "memory",
    "assistant"
  ],
  "author": "Spur Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spur/spur-steel-integration/issues"
  },
  "homepage": "https://github.com/spur/spur-steel-integration#readme"
}