{
  "name": "spur-chrome-extension",
  "version": "1.0.0",
  "description": "Spur - Personal Productivity Companion Chrome Extension",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "build:extension": "vite build && tsc && node scripts/prepare-extension.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build",
    "package": "npm run build:extension && node scripts/package-extension.js",
    "dev:chrome": "npm run build && node scripts/develop-chrome.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "zustand": "^4.3.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-toast": "^1.1.5",
    "lucide-react": "^0.321.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/chrome": "^0.0.246",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "vitest": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "@vitest/coverage-c8": "^0.34.0",
    "jsdom": "^22.1.0",
    "rimraf": "^5.0.0",
    "fs-extra": "^11.1.0",
    "archiver": "^6.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "keywords": [
    "chrome-extension",
    "productivity",
    "voice-recording",
    "memory-management",
    "gmail-integration",
    "ai-assistant"
  ],
  "author": "Spur Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/spur.git",
    "directory": "packages/chrome-extension"
  },
  "bugs": {
    "url": "https://github.com/yourusername/spur/issues"
  },
  "homepage": "https://github.com/yourusername/spur#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}